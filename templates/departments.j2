                      ('human', 'Кафедра гуманитарного образования'),
                      ('philo', 'Кафедра филологии'),
                      ('math', 'Кафедра математики'),
                      ('it', 'Кафедра информатики'),
                      ('physics', 'Кафедра физики и астрономии'),
                      ('bio', 'Кафедра химии и биологии'),
                      ('lang', 'Кафедра иностранных языков'),
                      ('pe', 'Кафедра психофизической культуры')] %}
    {% if loop.index == 1 %}
      <li class="nav-item active">
        <a href="#{{ id }}">{{ name }}</a>
      </li>
    {% else %}
      <li class="nav-item">
        <a href="#{{ id }}">{{ name }}</a>
      </li>
    {% endif %}
  {% endfor %}
{% endblock %}

